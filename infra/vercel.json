{
  "functions": {
    "api/jobs/weekly.ts": {
      "runtime": "nodejs20.x",
      "memory": 256,
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/jobs/weekly",
      "schedule": "0 12 * * 1",
      "region": "iad1"
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/en",
      "permanent": false
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" }
      ]
    }
  ]
}
